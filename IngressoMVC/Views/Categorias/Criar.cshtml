@model IngressoMVC.Models.ViewModels.RequestDTO.PostCategoriaDTO

@{
    ViewData["Title"] = "Adicionar Categoria";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Criar nova categoria</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Criar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Id" class="control-label"></label>
                        <input asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>            
                    <div class="form-group">
                        <input type="submit" value="Criar" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Listar Todos</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>